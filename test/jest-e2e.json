{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "modulePaths": [
    "<rootDir>"
  ],
  "roots": [
    "<rootDir>/src/",
    "<rootDir>/test/"
  ],
  "moduleDirectories": [
    "<rootDir>/node_modules"
  ],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "detectOpenHandles": true,
  "reporters": [
    "default",
    "jest-junit"
  ]
}